<?xml version="1.0" encoding="UTF-8"?>
<Page id="newDoctor" showinFrame="true" title="Doctor | Primus CRM "
      Object="com.primus.externals.doctor.model.Doctor"
      Controller="com.primus.externals.doctor.controller.DoctorController">
    <Template type="CRUD" name="CRUDTemplate"></Template>
    <Forwards>
        <Forward key="CANCEL">controller?page=doctors</Forward>
        <Forward key="SAVE">doctors</Forward>
    </Forwards>
    <IncludeJS>./js/CRMGeneral.js</IncludeJS>
    <IncludeJS>./js/RadsLib.js</IncludeJS>
    <AjaxGroups>
        <AjaxGroup service ="regionLocationSearch">
            <requestElements>
                <requestElement key = "region">LstRegion</requestElement>
            </requestElements>
            <responseElements>
                <responseElement key = "location" >LstLocations</responseElement>
            </responseElements>
        </AjaxGroup>
    </AjaxGroups>
    <Elements>
        <UIForm Id="cust" method="POST" enctype="multipart/form-data">
            <CoreSection>
                <ErrorSection>
                </ErrorSection>
                <Section type="detail">
                    <Element type="UITabset" Id="impexp" style="uitabstyle"
                             selectedTabStyle="titleStyleSelected active nav-link"
                             unSelectedTabStyle="titleStyleUnSelected nav-link">
                    <Element type="UITab" Id="idEmployeDetails" title="Basic_Info" cols ="4" showinTable="true">
                    <Element label="" type="UIHidden" Id="hdnVersion" property="version"/>
                    <Element label="" type="UIHidden" Id="hdnUserID" property="Id"/>
                    <Element label="" type="UIHidden" Id="hdnAssocationID" property="doctorAssociation.Id"/>
                    <Element label = ""  type = "UIHidden" Id = "hdnAddressId"  property ="address.Id" />
                    <Element label = ""  type = "UIHidden" Id = "hdnAddressVersionId"  property ="address.version" />
                    <Element label = ""  type = "UIHidden" Id = "hdnAAssociationVersionId"  property ="doctorAssociation.version" />
                    <Element label="Region" type="UIList"  Id="LstRegion"   property="doctorAssociation.location.region.id">
                        <options populator="getAllRegions" >
                        </options>
                    </Element>
                    <Element label="Location" type="UIList"  Id="LstLocations"   property="doctorAssociation.location.id">
                        <options populator="getAllLocations" >
                        </options>
                    </Element>
                    <Element label="Name" type="UIText" isMandatory="true" Id="txtname" property="name"/>

                    <Element label = "Photo" type = "UIFileUpload" Id = "txtPhoto3" property ="image" maxSize="30720"
                             multiple ="false"  fileNameProperty="fileName"   onChangeJS ="readURL(this,'idIMG3')" accept= ".png, .jpg, .jpeg, .gif"  />
                    <Element label = ""  type = "UIImage" Id = "idIMG3"  height = "200" weight ="200" src= "#" property ="fileWithLink" />
                    <Element label = ""  type = "UIHidden" Id = "idHdnGFileWithLink"   property ="fileWithLink" />
                    <Element label = ""  type = "UIHidden" Id = "idHdnGFileWithoutLink"   property ="fileWithoutLink" />


                    <Element label="Qualification" type="UIText" isMandatory="false" Id="txtQual"
                             property="qualification" />
                    <Element label="Specialization" type="UIList" isMandatory="false" Id="lstSpecial"
                             property="specialization.code">
                        <options populator="getFiniteValues" populatorParam="SPECIAL">
                        </options>
                    </Element>

                    <Element label="Class" type="UIList" isMandatory="false" Id="lstClass"
                             property="doctorClass.code">
                        <options populator="getFiniteValues" populatorParam="DOCCLASS">
                        </options>
                    </Element>

                    <Element label="Hospital" type="UIText" isMandatory="false" Id="txtHospital"
                             property="hospital"/>
                    <Element label="Description" type="UIText" isMandatory="false" Id="txtdescription"
                             property="description"/>
                    <Element label="Address1" type="UIText" isMandatory="true" Id="txtaddress1"
                             property="address.address1"/>
                    <Element label="Address2" type="UIText" isMandatory="false" Id="txtaddress2"
                             property="address.address2"/>
                    <Element label="Street_Name" type="UIText" isMandatory="true" Id="txtStr3"
                             property="address.streetName"/>
                    <Element label="Zipcode" type="UIText" isMandatory="false" Id="txtzipcode"
                             property="address.zipCode"/>
                    <Element label="City" type="UIText" isMandatory="false" Id="txtcity" property="address.city"/>
                    <Element label="Phone" type="UIText" isMandatory="true" Id="txtphone" property="address.phone"/>

                    <Element label="Alternate_Phone" type="UIText" isMandatory="false" Id="txotconactPersonPhone" property="alternatePhone"/>
                    <Element label="Email" type="UIText" isMandatory="false" Id="txtcontactEmail"
                             property="email"/>
                    <Element label="Gmail_Id" type="UIText" isMandatory="false" Id="txtgmailId"
                             property="gmailId"/>
                    <Element label="Facebook_Id" type="UIText" isMandatory="false" Id="txtfacebookId"
                             property="faceBookId"/>
                    </Element>
                    <Element type="UITab" Id="idPreferredTim" title="Preferred_Visits" showinTable="false">
                        <Element type="UITable" rows="1" cols="10" style="grid" applyStyleonChildren="true"
                                 Id="tblvisitPrefs"
                                 property="appointmentPreferences[]">
                            <Element type="UITableHead" style="listPageTitle">
                                <Element type="UITableRow">
                                    <Element type="UITableCol" width="20%">
                                        <Element label="" type="UILabel" Id="lblCode" value="Day"/>
                                    </Element>
                                    <Element type="UITableCol" width="25%">
                                        <Element label="" type="UILabel" Id="lblCode" value="Time"/>
                                    </Element>
                                    <Element type="UITableCol" width="10%">
                                        <Element label="" type="UILabel" Id="lblCode" value="Rank"/>
                                    </Element>
                                    <Element type="UITableCol" width="10%">
                                    </Element>
                                </Element>
                            </Element>
                            <Element type="UITableRow" dataType="com.primus.common.appointmentpreference.model.AppointmentPreference"
                                     rendered="!Object.isDeleted">

                                <Element type="UITableCol" width="20%">
                                    <Element label="" type="UIList"  Id="lstWeekDays"
                                             property="weekday">
                                        <options populator="getDays"></options>
                                    </Element>
                                </Element>
                                <Element type="UITableCol" width="25%">
                                    <Element label="" type="UIList" isMandatory="true" Id="txtapptHH" style="custom10width"
                                             property="hh">
                                        <options populator="getHours">
                                        </options>
                                    </Element>

                                </Element>
                                <Element type="UITableCol" width="10%">
                                    <Element label="" type="UIText" isMandatory="false" Id="txtRank"
                                             style="form-control custom5width" property="rank"/>
                                </Element>
                                <Element type="UITableCol" width="10%">
                                    <Element label="" type="UIHidden" Id="hdnsplitlineNo" property="id"/>
                                    <Element label="" type="UIHidden" Id="hdnsplitlineversion" property="version"/>
                                    <Element caption="" style="btn btn-primary" iconStyle="glyphicon glyphicon-plus"
                                             type="UIButton" Id="btnAddRow"
                                             fixedAction="FixedAction.ACTION_ADDTABLEROW"
                                             fixedActionParam="this"/>
                                    <Element caption="" style="btn btn-danger" iconStyle="glyphicon glyphicon-minus"
                                             type="UIButton" Id="btnDelRow"
                                             fixedAction="FixedAction.ACTION_DELETETABLEROW"
                                             fixedActionParam="this"/>
                                </Element>
                            </Element>
                        </Element>

                    </Element>
                    </Element>
                </Section>
            </CoreSection>
            <Section type="summary">
            </Section>

        </UIForm>
    </Elements>
</Page>