<?xml version="1.0" encoding="UTF-8"?>
<Page id="appointmentPlan" showinFrame="true" title="Target | Primus WFM "
      Object="com.primus.crm.appointmentplan.model.AppointmentPlan"
      Controller="com.primus.crm.appointmentplan.controller.AppointmentPlanController">
    <Template type="Transaction" name="TransactionTemplate"></Template>
    <Forwards>
        <Forward key="CANCEL">controller?page=targets</Forward>
        <Forward key="SAVE">targets</Forward>
    </Forwards>
    <IncludeJS>./js/CRMGeneral.js</IncludeJS>
    <IncludeJS>./js/RadsLib.js</IncludeJS>
    <Elements>
        <UIForm Id="cust" method="POST">
            <CoreSection>
                <ErrorSection>
                </ErrorSection>
                <Section type="detailFullPage">
                    <Element label="" type="UIHidden" isMandatory="false" Id="txtTargetID"
                             property="target.id"/>

                    <Element type="UITable" rows="1" cols="10" style="grid" applyStyleonChildren="true" Id="tblTrans"
                    property="appointmentUnits[]">
                    <Element type="UITableHead" style="listPageTitle">
                        <Element type="UITableRow">
                            <Element type="UITableCol" width="25%">
                                <Element label="" type="UILabel" Id="lblCode" value="Agent"/>
                            </Element>

                            <Element type="UITableCol" width="25%">
                                <Element label="" type="UILabel" Id="lblCode" value="Visit_Entity"/>
                            </Element>
                            <Element type="UITableCol" width="25%">
                                <Element label="" type="UILabel" Id="lblCode" value="Visit_To"/>
                            </Element>

                            <Element type="UITableCol" width="25%">
                                <Element label="" type="UILabel" Id="lblCode" value="Date_Time"/>
                            </Element>

                        </Element>
                    </Element>

                    <Element type="UITableRow" dataType="com.primus.crm.appointmentplan.AppointmentUnit" >
                    <Element type="UITableCol" width="25%">
                        <Element label="" type="UILabel" isMandatory="false" Id="txtAgent"
                                 property="agent.userId"/>
                    </Element>
                    <Element type="UITableCol" width="25%">
                        <Element label="" type="UILabel" isMandatory="false" Id="txtVisitType"
                                 property="visitType"/>
                    </Element>
                    <Element type="UITableCol" width="25%">
                        <Element label="" type="UILabel" isMandatory="false" Id="txtVisitin"
                                 property="entity.Name"/>
                    </Element>
                    <Element type="UITableCol" width="25%">
                        <Element label="" type="UILabel" isMandatory="false" Id="txtDTTime"
                                 property="fullTime"/>
                    </Element>
                    </Element>
                    </Element>
                </Section>
            </CoreSection>
            <Section type="optionalsummary">
                <Element caption="Replan" type="UIButton" Id="btnReplan" style="btn btn-primary"
                         iconStyle="glyphicon glyphicon-plus" fixedAction="FixedAction.ACTION_PLAINSUBMIT"
                         fixedActionParam="replan"/>
                <Element caption="Confirm" type="UIButton" Id="btnReplan" style="btn btn-success"
                         iconStyle="glyphicon glyphicon-flash" fixedAction="FixedAction.ACTION_PLAINSUBMIT"
                         fixedActionParam="confirm"/>
            </Section>
        </UIForm>
    </Elements>
</Page>