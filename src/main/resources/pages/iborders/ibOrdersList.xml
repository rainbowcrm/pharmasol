<?xml version="1.0" encoding="UTF-8"?>
<Page id="iborders" showinFrame="true" title="Inbound Orders | Primus CRM"
      Object="com.primus.operations.iborder.model.InboundOrder"
      Controller="com.primus.operations.iborder.controller.InboundOrderListController">

    <Template type="List" name="ListTemplate"></Template>
    <Forwards>
        <Forward key="NEW">controller?page=newinboundorder</Forward>
        <Forward key="EDIT">controller?page=newinboundorder</Forward>
    </Forwards>
    <AjaxGroups>
        <AjaxGroup service="filterSearch">
            <requestElements>
                <requestElement key="filterId">lstSavedFilters</requestElement>
            </requestElements>
            <responseElements>
                <responseElement key="FilterName">txtFilterName</responseElement>
                <responseElement key="docNo">txtdocNo</responseElement>
                <responseElement key="division">lstDivision</responseElement>
                <responseElement key="region">lstRegion</responseElement>
                <responseElement key="status">lststatus</responseElement>
            </responseElements>
        </AjaxGroup>
    </AjaxGroups>

    <IncludeJS>./js/CRMGeneral.js</IncludeJS>
    <IncludeJS>./js/RadsLib.js</IncludeJS>
    <Elements>
        <CoreSection>
            <ErrorSection>
            </ErrorSection>
            <FilterSection>
                <FilterNode>
                    <Element label="Saved_Filters" type="UIList" Id="lstSavedFilters" property="">
                        <options populator="getSavedFiters">
                        </options>
                    </Element>
                </FilterNode>
                <FilterNode>
                    <Element label="Doc_No" type="UIText" Id="txtdocNo " property="docNo"/>
                </FilterNode>
                <FilterNode>
                    <Element label="Division" type="UIList" Id="lstDivision " property="division.id">
                        <options populator="getAllDivisions" populatorParam="true">
                        </options>
                    </Element>
                </FilterNode>
                <FilterNode>
                    <Element label="Region" type="UIList" Id="lstRegion" property="region.id">
                        <options populator="getAllRegions" populatorParam="true">
                        </options>
                    </Element>
                </FilterNode>
                <FilterNode>
                    <Element label="Status" type="UIList" Id="lstStatus" property="lststatus.code">
                        <options populator="getAllStatus" >
                        </options>
                    </Element>
                </FilterNode>

            </FilterSection>
            <ListSection>
                <Columns allowrowselection="Multiple" uniqueproperty="Id">
                    <SelectionColumn>
                        <Element label="" type="UICheckBox" Id="idChkSel" rendered="!Object.isDeleted" property="Id"/>
                        <Element label="" type="UIImage" Id="idChkSel" rendered="Object.isDeleted" height="21"
                                 weight="21" src="./images/deletedRow.jpg"/>
                    </SelectionColumn>
                    <Column title="Doc_No" sortField="DOC_NO" width="15%">
                        <Element label="" type="UINote" Id="idIdNote" property="docNo"/>
                    </Column>
                    <Column title="Division" sortField="DIVISION.NAME" width="25%">
                        <Element label="" type="UINote" Id="idIdNote" property="division.Name"/>
                    </Column>
                    <Column title="Regions" sortField="REGION.NAME" width="25%">
                        <Element label="" type="UINote" Id="idIdNote" property="region.Name"/>
                    </Column>
                    <Column title="Date" sortField="REQST_DATE" width="15%">
                        <Element label="" type="UINote" Id="idIdNote" property="requestedDate"/>
                    </Column>
                       <Column title="Status" sortField="ORDER_STATUS" width="20%">
                        <Element label="" type="UINote" Id="idIdNote" property="orderStatus.description"/>
                    </Column>

                </Columns>
            </ListSection>
        </CoreSection>
        <Section type="summary">

            <Element caption="Process" type="UIButton" Id="btnEdit" style="btn btn-warning"
                     iconStyle="glyphicon glyphicon-pencil" fixedAction="FixedAction.ACTION_GOEDITMODE"
                     fixedActionParam="EDIT"/>
            <Element type="Panel" key="NavPanel" style="sameline"></Element>
        </Section>
        <Section type="copyRightSection"/>
    </Elements>
</Page>
