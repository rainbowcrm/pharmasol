<?xml version="1.0" encoding="UTF-8"?>
<Page id = "corpsalestargetanalyse" showinFrame ="true"  title ="Target Analysis| Primus CRM" Object = "com.primus.crm.targetanalysis.model.TargetAnalyzer"
      Controller = "com.primus.crm.targetanalysis.controller.TargetAnalyzerController">
    <Template type= "General"  name = "GraphTemplate"></Template>

    <Elements>
        <UIForm Id ="cust" method = "POST" enctype="multipart/form-data" >

            <CoreSection>
                <ErrorSection>
                </ErrorSection>
                <Section type= "mainSection">
                    <Element type = "UITable" rows = "1" cols = "2"  style = "outlinedTable">
                        <Element type = "UITableRow">
                            <Element type ="UITableCol"><Element label = "Sales_Period"  type = "UIList" Id = "txtcode" style="custom30width"    property ="target"  >
                                <options populator =  "getTargetPeriods">
                                </options>
                            </Element>
                            </Element>
                            <Element type ="UITableCol">
                                <Element label = "Based on"  type = "UIList" Id = "rdoType"  style="custom30width"  property ="basedOn" >
                                    <options>
                                        <option key ="TV"> Total Visits </option>
                                        <option key ="ATV"> Agent Visits </option>
                                        <option key ="AGS"> Agent Sales </option>
                                        <option key ="ITS"> Item Sales </option>
                                    </options>
                                </Element>
                            </Element>
                        </Element>
                        <Element type = "UITableRow">
                            <Element type ="UITableCol">
                                <Element caption = "Analyze"  type = "UIButton" Id = "btncheck"  style="btn btn-success"  iconStyle="glyphicon glyphicon-forward"
                                         fixedAction ="FixedAction.ACTION_READ"   />

                            </Element>
                            <Element type ="UITableCol">
                            </Element>
                        </Element>
                    </Element>
                </Section>
                <Section type= "displaySection">
                    <Element type = "UIBarChart" Id = "brChrt" useGoogleGraph="true" dataProvider = "targetData" >
                        <xStart>0</xStart>
                        <yStart>20</yStart>
                        <rangeHeight>600</rangeHeight>
                        <rangeWidth>1000</rangeWidth>
                        <marginWidth>30</marginWidth>
                        <barWidth>30</barWidth>
                        <noYAxisDivisions>6</noYAxisDivisions>
                    </Element>
                </Section>
            </CoreSection>
            <Section type ="copyRightSection"/>
        </UIForm>
    </Elements>
</Page>
