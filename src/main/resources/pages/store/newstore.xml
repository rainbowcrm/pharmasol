<?xml version="1.0" encoding="UTF-8"?>
<Page id="newStore" showinFrame="true" title="Store | Primus CRM "
      Object="com.primus.externals.store.model.Store"
      Controller="com.primus.externals.store.controller.StoreController">
    <Template type="CRUD" name="CRUDTemplate"></Template>
    <Forwards>
        <Forward key="CANCEL">controller?page=stores</Forward>
        <Forward key="SAVE">stores</Forward>
    </Forwards>
    <IncludeJS>./js/CRMGeneral.js</IncludeJS>
    <IncludeJS>./js/RadsLib.js</IncludeJS>
    <AjaxGroups>
        <AjaxGroup service ="regionLocationSearch">
            <requestElements>
                <requestElement key = "region">LstRegion</requestElement>
            </requestElements>
            <responseElements>
                <responseElement key = "location" >LstLocations</responseElement>
            </responseElements>
        </AjaxGroup>
    </AjaxGroups>
    <Elements>
        <UIForm Id="cust" method="POST">
            <CoreSection>
                <ErrorSection>
                </ErrorSection>
                <Section type="detail">
                    <Element label="" type="UIHidden" Id="hdnVersion" property="version"/>
                    <Element label="" type="UIHidden" Id="hdnUserID" property="Id"/>
                   <Element label="Region" type="UIList"  Id="LstRegion"   property="storeAssociation.location.region.id">
                        <options populator="getAllRegions" >
                        </options>
                    </Element>
                    <Element label="Location" type="UIList"  Id="LstLocations"   property="storeAssociation.location.id">
                        <options populator="getAllLocations" >
                        </options>
                    </Element>
                    <Element label = ""  type = "UIHidden" Id = "hdnAddressId"  property ="address.Id" />
                    <Element label="Code" type="UIText" isMandatory="true" Id="txtcode" property="code"/>
                    <Element label="Name" type="UIText" isMandatory="true" Id="txtname" property="name"/>
                    <Element label="Description" type="UIText" isMandatory="false" Id="txtdescription"
                             property="description"/>
                    <Element label="Address1" type="UIText" isMandatory="true" Id="txtaddress1"
                             property="address.address1"/>
                    <Element label="Address2" type="UIText" isMandatory="false" Id="txtaddress2"
                             property="address.address2"/>
                    <Element label="Street_Name" type="UIText" isMandatory="true" Id="txtStr3"
                             property="address.streetName"/>
                    <Element label="Zipcode" type="UIText" isMandatory="false" Id="txtzipcode"
                             property="address.zipCode"/>
                    <Element label="City" type="UIText" isMandatory="false" Id="txtcity" property="address.city"/>
                    <Element label="Phone" type="UIText" isMandatory="true" Id="txtphone" property="address.phone"/>
                    <Element label="Contact_Person" type="UIText" isMandatory="true" Id="txtconactPerson" property="contactPerson"/>
                    <Element label="Contact_Person_Phone" type="UIText" isMandatory="false" Id="txotconactPersonPhone" property="contactPersonPhone"/>
                    <Element label="Email" type="UIText" isMandatory="false" Id="txtcontactEmail"
                             property="email"/>
                    <Element label="Gmail_Id" type="UIText" isMandatory="false" Id="txtgmailId"
                             property="gmailId"/>
                    <Element label="Facebook_Id" type="UIText" isMandatory="false" Id="txtfacebookId"
                             property="faceBookId"/>
                </Section>
            </CoreSection>
            <Section type="summary">
            </Section>

        </UIForm>
    </Elements>
</Page>